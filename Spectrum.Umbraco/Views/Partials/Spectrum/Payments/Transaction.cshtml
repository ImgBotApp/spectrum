@using Spectrum.Content.Payments.ViewModels
@model TransactionViewModel

<dl class="dl-horizontal">
    <dt>Payment Id</dt>
    <dd>@Model.Id</dd>
    <dt>Date</dt>
    <dd>
        @if (Model.TransactionDateTime.HasValue)
        {
            @Model.TransactionDateTime.Value.ToString("dd MMM yyyy HH:mm:ss")
        }
    </dd>
    <dt>Type</dt>
    <dd>@Model.Type</dd>
    <dt>Status</dt>
    <dd>@Model.Status</dd>
    <dt>Payment Information</dt>
    <dd>@Model.CardType @Model.MaskedNumber</dd>
    <dt>Amount</dt>
    <dd>@Model.Amount @Model.CurrencyType</dd>
</dl>





