@model Spectrum.Content.Components.Models.CardModel
@{
    var divClass = "col-xs-12";
}

@*The card count is used to decide what column size to use in the grid *@
@*If the card count is 2 then we need to know which card is being requested so the offset can be turned off on the second card. *@

@if (@ViewBag.CardCount == 4)
{
    divClass = "col-xs-12 col-md-3";
}
else if (@ViewBag.CardCount == 3)
{
    divClass = "col-xs-12 col-md-4";
}
else if (@ViewBag.CardCount == 2)
{
    if (@ViewBag.index == 1)
    {
        divClass = "col-xs-12 col-md-4 col-md-offset-2";
    }
    else
    {
        divClass = "col-xs-12 col-md-4";
    }
}
else
{
    divClass = "col-xs-12 col-md-4 col-md-offset-4";
}

<div class="@divClass">

    <div class="card">
        <div class="img-card">
            <img src="@Model.Image" />
        </div>
        <div class="card-content">
            @if (Model.Title != string.Empty)
            {
                <h4 class="card-title">
                    @Model.Title
                </h4>
            }

            @if (Model.Text != string.Empty)
            {
                <p class="">
                    @Html.Raw(Model.Text)
                </p>
            }

            @if (Model.PrimaryLink != "#" && Model.PrimaryLinkText != string.Empty)
            {
                <a class="btn btn-md btn-primary button-stack create-card-btn" role="button" href="@Model.PrimaryLink">@Model.PrimaryLinkText</a>
            }
        </div>

        @if (Model.SecondaryLink != "#" && Model.SecondaryLinkText != string.Empty)
        {
            <div class="card-read-more">
                <a href="@Model.SecondaryLink" class="btn btn-link btn-block">
                    @Model.SecondaryLinkText
                </a>
            </div>
        }
    </div>
</div>