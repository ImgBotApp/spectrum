@using Spectrum.Content.Authentication.Controllers
@model Spectrum.Content.Authentication.ViewModels.LoginViewModel
@{
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}

@using (Html.BeginUmbracoForm<LoginController>("HandleLogin"))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <div class="center-content">
        <div class="row login">
            <div class="col-sm-6 col-md-4 col-md-offset-4">

                <div class="account-wall">

                    <h2 class="partial-title">Login</h2>

                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.EmailAddress)

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password)

                    <button value="submit" id="submit" class="btn btn-lg btn-primary btn-block">Login</button>

                    <div class="row">
                        <div class="form-group col-xs-8">
                            <p>@TempData["Status"]</p>
                        </div>
                    </div>

                    <label>
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.LabelFor(model => model.RememberMe)
                    </label>

                </div>
                <!--a href="#" class="text-center new-account">Create an account </a-->
            </div>
        </div>
    </div>
}