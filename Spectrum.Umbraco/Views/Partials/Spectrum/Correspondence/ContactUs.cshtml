@using Spectrum.Content.Correspondence.Controllers
@model Spectrum.Content.Correspondence.ViewModels.ContactUsViewModel
@{
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}


@using (Html.BeginUmbracoForm<ContactUsController>("InsertContactUs"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="center-content">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <h2 class="contact-title">Contact us today</h2>

                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" required autofocus>
                    <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" placeholder="Email" required>
                    <textarea rows="5" class="form-control" id="Message" name="Message" placeholder="Message"></textarea>
                    <button value="submit" id="submit" class="btn btn-lg btn-primary btn-block">Send message</button>

                </div>
            </div>
        </div>
    </div>
}
