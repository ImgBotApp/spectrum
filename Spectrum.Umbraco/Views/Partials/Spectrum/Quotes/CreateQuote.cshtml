
@using Spectrum.Content.Invoices.Controllers
@model Spectrum.Content.Invoices.ViewModels.CreateInvoiceViewModel
@{
}

@using (Html.BeginUmbracoForm<InvoicesController>("CreateInvoice"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="center-content">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <h2 class="partial-title">Create Quote</h2>

                    @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control", placeholder = "Client Name" } })
                    @Html.ValidationMessageFor(model => model.ClientName)

                    @Html.Action("GetAddressSearch", "Search")

                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Client Email Address" } })
                    @Html.ValidationMessageFor(model => model.EmailAddress)

                    @Html.EditorFor(model => model.InvoiceAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Invoice Amount" } })
                    @Html.ValidationMessageFor(model => model.InvoiceAmount)

                    <button value="submit" id="submit" class="btn btn-lg btn-primary btn-block">Save Quote</button>

                </div>
            </div>
        </div>
    </div>

    <script>

        $(document).ready(function () {

            $('.input-validation-error').parents('.form-group').addClass('has-error');
            $('.field-validation-error').addClass('text-danger');

            $('.btn').click(function () {
                $(".date", $(this).closest(".form-group")).focus();
            });
        });

    </script>
}
